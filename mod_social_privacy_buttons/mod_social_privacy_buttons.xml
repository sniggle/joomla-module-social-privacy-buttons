<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>Social Privacy Buttons</name>
	<creationDate>January 2018</creationDate>
	<author>sniggle.me</author>
	<authorEmail>sniggle@sniggle.me</authorEmail>
	<authorUrl>http://www.sniggle.me</authorUrl>
	<version>1.0.0</version>
	<description>Module to display social sharing buttons without tracking scripts.</description>
	<files>
		<filename>mod_social_privacy_buttons.xml</filename>
		<filename module="mod_social_privacy_buttons">mod_social_privacy_buttons.php</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
        <language tag="en-GB">en-GB/en-GB.mod_social_privacy_buttons.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_social_privacy_buttons.sys.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_social_privacy_buttons.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_social_privacy_buttons.sys.ini</language>
        <language tag="es-ES">es-ES/es-ES.mod_social_privacy_buttons.ini</language>
        <language tag="es-ES">es-ES/es-ES.mod_social_privacy_buttons.sys.ini</language>
		</languages>
	<config>
		<fields name="params">
      <fieldset name="basic">
				<field name="load_fontawesome" type="radio" default="1" label="MOD_SOCIAL_PRIVACY_BUTTONS_LOAD_FONTAWESOME" description="MOD_SOCIAL_PRIVACY_BUTTONS_LOAD_FONTAWESOME_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
			</fieldset>
			<fieldset name="advanced">
				<field name="show_facebook" type="radio" default="1" label="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_FACEBOOK" description="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_FACEBOOK_DESC">
                    <option value="1">JYES</option>
										<option value="0">JNO</option>
                </field>
				<field name="show_gplus" type="radio" default="1" label="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_GPLUS" description="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_GPLUS_DESC">
                    <option value="1">JYES</option>
										<option value="0">JNO</option>
                </field>
				<field name="show_linkedin" type="radio" default="1" label="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_LINKEDIN" description="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_LINKEDIN_DESC">
                    <option value="1">JYES</option>
										<option value="0">JNO</option>
                </field>
				<field name="show_pinterest" type="radio" default="1" label="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_PINTEREST" description="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_PINTEREST_DESC">
                    <option value="1">JYES</option>
										<option value="0">JNO</option>
                </field>
				<field name="show_twitter" type="radio" default="1" label="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_TWITTER" description="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_TWITTER_DESC">
										<option value="1">JYES</option>
										<option value="0">JNO</option>
								</field>
				<field name="show_whatsapp" type="radio" default="1" label="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_WHATSAPP" description="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_WHATSAPP_DESC">
										<option value="1">JYES</option>
										<option value="0">JNO</option>
								</field>
				<field name="show_mail" type="radio" default="1" label="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_MAIL" description="MOD_SOCIAL_PRIVACY_BUTTONS_SHOW_MAIL_DESC">
										<option value="1">JYES</option>
										<option value="0">JNO</option>
								</field>
			</fieldset>
		</fields>
	</config>
</extension>
